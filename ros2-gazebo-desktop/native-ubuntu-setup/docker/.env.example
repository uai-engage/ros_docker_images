# Ubuntu Desktop Container Configuration
# Copy to .env and customize

# User Configuration
USERNAME=developer
USER_UID=1000
USER_GID=1000

# Container Name
CONTAINER_NAME=ubuntu_desktop_dev

# Workspace Path (persistent storage)
# This directory will be mounted to ~/px4_workspace inside container
WORKSPACE_PATH=./workspace

# VNC Password
VNC_PASSWORD=password

# Resource Limits
MEMORY_LIMIT=16G
MEMORY_RESERVATION=8G
CPU_LIMIT=8

# Display (for X11 forwarding)
# DISPLAY=:0

# ========================================
# GPU Support (NVIDIA)
# ========================================
# Uncomment these in docker-compose.yml if using NVIDIA GPU:
#
# environment:
#   - NVIDIA_VISIBLE_DEVICES=all
#   - NVIDIA_DRIVER_CAPABILITIES=all
#
# deploy.resources.reservations.devices:
#   - driver: nvidia
#     count: all
#     capabilities: [gpu]

# ========================================
# Network Configuration
# ========================================
# Default: host network mode (simpler for QGroundControl)
#
# If using bridge mode instead, uncomment ports section in compose file:
# ports:
#   - "5901:5901"     # VNC
#   - "6901:6901"     # noVNC
#   - "14550:14550/udp"  # MAVLink UDP
#   - "5760:5760/tcp"    # MAVLink TCP
#   - "8888:8888/udp"    # uXRCE-DDS

# ========================================
# Access Information
# ========================================
# After starting container:
#
# noVNC (web browser):
#   http://localhost:6901/vnc.html
#   Password: password (or value of VNC_PASSWORD)
#
# VNC Client:
#   localhost:5901
#   Password: password (or value of VNC_PASSWORD)
#
# QGroundControl (from host):
#   TCP: localhost:5760
#   UDP: localhost:14550
